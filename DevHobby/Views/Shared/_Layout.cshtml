<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <title>Dev-hobby.pl</title>
    <meta name="description" content="">
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet">
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
</head>
<body>

    <nav class="navbar bg-body-tertiary">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="~/Images/dev-hobby-logo.png" alt="Dev-Hobby.pl">
            </a>
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Szukaj" aria-label="Szukaj">
                <button class="btn btn-outline-success" type="submit">Szukaj</button>
            </form>
        </div>
    </nav>

    <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Images/carousel1.png" class="d-block w-100" alt="Cms Shop" height="400px">
            </div>
            <div class="carousel-item">
                <img src="~/Images/carousel2.png" class="d-block w-100" alt="Portal Randkowy" height="400px">
            </div>
            <div class="carousel-item">
                <img src="~/Images/carousel3.png" class="d-block w-100" alt="Angular od zera do bohatera" height="400px">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <main>
        <div class="album py-5 bg-body-tertiary">
            <div class="container">
                @RenderBody()
            </div>
        </div>
    </main>

</body>
</html>

