@model ShoppingCartViewModel

<h3 class="my-5">
    Twój koszyk
</h3>

<div class="row gx-3">
    <div class="col-8">
        @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
        {
            <div class="card shopping-cart-card mb-2">
                <div class="row">
                    <div class="col-md-4">
                        <img src="@item.Course.ImageThumbnailUrl" class="img-fluid rounded-start p-2" alt="@item.Course.Name">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-text">@item.Amount x @item.Course.Name</h5>
                            <div class="d-flex justify-content-between">
                                <h6>@item.Course.Author</h6>
                                <h2>@item.Course.Price.ToString("c")</h2>
                            </div>
                            <ul>
                                @foreach (var it in item.Course.Description.WhatWillYouLearn)
                                {
                                    <li>@it.Content</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-4">
        <div class="card shopping-cart-card p-3">
            <div class="row">
                <h4 class="col">Wartość Koszyka:</h4>
                <h4 class="col text-end">@Model.ShoppingCartTotal.ToString("c")</h4>
            </div>
            <hr />
            <div class="text-center d-grid">
                <a class="btn btn-secondary"
                   asp-controller="Order"
                   asp-action="Checkout">
                    <h4>Zapisz sie teraz</h4>
                </a>
            </div>
        </div>
    </div>
</div>
